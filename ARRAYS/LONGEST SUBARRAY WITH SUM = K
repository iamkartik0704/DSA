#include<bits/stdc++.h>
using namespace std;
class Solution {
  public:
    int longestSubarray(vector<int>& arr, int k) {
        map<int,int>psum;
        int sum=0;
        int maxlen=0;
        for (int i = 0; i < arr.size(); i++)
        {
            sum +=arr[i];
            if(sum==k){
                maxlen=max(maxlen,i+1);
            }
            int rem = sum - k;
            if(psum.find(rem)!=psum.end()){
                int len = i-psum[rem];
                maxlen=max(maxlen,len);

            }
            psum[sum] = i;

        }
        return maxlen;
        
        
    }
};
