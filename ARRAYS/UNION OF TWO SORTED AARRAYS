// union of two arrays
#include<bits/stdc++.h>
using namespace std;
class Solution {
   public:
    vector<int> unionArray(vector<int>& nums1, vector<int>& nums2) {
        int n1=nums1.size();
        int n2=nums2.size();
        vector<int>res;
        int i=0;
        int j=0;
        while(i<n1 && j<n2){
            if(nums1[i]<=nums2[j]){
                if(res.size()==0 || res.back()!=nums1[i]){
                    res.push_back(nums1[i]);
                }
                i++;
            }
            else{
                if(res.size()==0 || res.back()!=nums2[j]){
                    res.push_back(nums2[i]);
                }
                j++;
            }
        }
        while (i<n1)
        {
            if(res.size()==0 || res.back()!=nums1[i]){
                    res.push_back(nums1[i]);
                }
                i++;
            
        }
        while (j<n2)
        {
            if(res.size()==0 || res.back()!=nums2[j]){
                    res.push_back(nums2[j]);
                }
                j++;
            
        }
        
        return res;
    }
};
