// maximum number of consecutive 1s

#include<bits/stdc++.h>
using namespace std;

class Solution {
public:
    int findMaxConsecutiveOnes(vector<int>& nums) {
        int sum=0;
        int max1=0;  // critical step

        for (int i = 0; i < nums.size(); i++)
        {
            if(nums[i]==1){
                sum = sum+1;
                max1=max(max1,sum);
            }
            else sum=0; 
        }
        return max1;
    }
};
